<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/insertView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="insert new cab"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#202020"
            android:textSize="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/insertView1"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:text="Date"
            android:layout_marginRight="75dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#202020" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="date" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:text="Time"
            android:layout_marginRight="72dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#202020" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:text="Capacity"
            android:layout_marginRight="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#202020" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:text="Destination"
            android:layout_marginRight="15.5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#202020" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text|textImeMultiLine" >

            <requestFocus />
        </EditText>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:text="From"
            android:layout_marginRight="70dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#202020" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text|textImeMultiLine" >

            <requestFocus />
        </EditText>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:text="Note"
            android:layout_marginRight="74dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#202020" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text|textImeMultiLine" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:text="Total pay"
            android:layout_marginRight="36dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#202020" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:background="#CCCCCC"

            android:ems="10"
            android:inputType="phone" >

            <requestFocus />
        </EditText>


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:text="Name"
            android:layout_marginRight="64dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#202020" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text|textImeMultiLine" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:text="Degree"
            android:layout_marginRight="55dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#202020" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:background="#CCCCCC"
            android:ems="10"
            android:inputType="text" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="23dp"
            android:textSize="20dp"
            android:text="Mobile"
            android:layout_marginRight="58dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#202020" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toRightOf="@+id/textView10"
            android:background="#CCCCCC"

            android:ems="10"
            android:inputType="phone" >

            <requestFocus />
        </EditText>



        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="20dp"
            android:background="#CCCCCC"
            android:text="OK"
            android:textColor="#202020"
            android:onClick="go_to_options"/>

        <Button
            android:id="@+id/buttona1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/button1"
            android:layout_toRightOf="@+id/button1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:background="#CCCCCC"
            android:text="BACK TO OPTIONS"
            android:textColor="#202020"
            android:onClick="go_to_options_a1"/>

    </RelativeLayout>



</ScrollView>